    <!-- groovy -->
    <profile>
      <id>dossier-groovy</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>dossier-groovy</name>
          <value>true</value>
        </property>
      </activation>

      <properties>
        <id-key>groovy</id-key>
