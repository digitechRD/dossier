<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>fr.digitech.ged.dossier</groupId>
    <artifactId>dossier.documentation.gh</artifactId>
    <version>1.0.2-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>dossier-docs</artifactId>
  <packaging>jar</packaging>
  <name>Dossier Docs</name>
  <version>1.0.1-SNAPSHOT</version>
  <description>Dossier ASCIIDOC documentation</description>

  <profiles>
    <!-- sso -->
    <profile>
      <id>dossier-sso</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>dossier-sso</name>
          <value>true</value>
        </property>
      </activation>

      <properties>
        <id-key>sso</id-key>
        <compress.pdf>true</compress.pdf>
        <optimize.pdf>true</optimize.pdf>
      </properties>

      <build>
        <plugins>
          <plugin>
            <groupId>org.asciidoctor</groupId>
            <artifactId>asciidoctor-maven-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- user-guide -->
    <profile>
      <id>dossier-user-guide</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>dossier-user-guide</name>
          <value>true</value>
        </property>
      </activation>

      <properties>
        <id-key>user-guide</id-key>
        <!--<subLevelDir>7.2</subLevelDir>-->
        <!--<subLevelDir>8.0</subLevelDir>-->
        <subLevelDir>8.1</subLevelDir>
        <embedAssets>false</embedAssets>
        <doc.outputFile>[Dossier]Manuel-Utilisateur</doc.outputFile>
        <compress.pdf>true</compress.pdf>
        <optimize.pdf>true</optimize.pdf>
      </properties>

      <build>
        <plugins>
          <plugin>
            <groupId>org.asciidoctor</groupId>
            <artifactId>asciidoctor-maven-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- cmis -->
