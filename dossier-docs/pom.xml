    </profile>

    <!-- ws-soap -->
    <profile>
      <id>dossier-ws</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>dossier-ws</name>
          <value>true</value>
        </property>
      </activation>

      <properties>
