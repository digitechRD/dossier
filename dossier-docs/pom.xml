    <!-- signature-book -->
    <profile>
      <id>dossier-signature-book</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>dossier-signature-book</name>
          <value>true</value>
        </property>
      </activation>

      <properties>
        <id-key>signature-book</id-key>
        <compress.pdf>true</compress.pdf>
        <optimize.pdf>true</optimize.pdf>
